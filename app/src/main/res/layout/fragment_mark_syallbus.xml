<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mdtp_white"
    android:orientation="vertical">

<!--<ScrollView-->
    <!--android:id="@+id/scroller"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:fillViewport="true">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_57sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/header_blue"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_38sdp"
                android:background="@drawable/back_btn" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignTop="@+id/header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_38sdp"
            android:text="@string/marks_syllabus_label"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnmenu"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_marginLeft="@dimen/_270sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_39sdp"
            android:background="@drawable/menu" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:orientation="vertical">


        <LinearLayout
            android:id="@+id/mainstudent_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_linear_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/term_txt_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="0.77"
                        android:text="@string/term_label"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="0.14"
                        android:text=":"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/term_spinner"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_weight="1.8"
                        android:background="@drawable/dropdown_button"
                        android:forceHasOverlappingRendering="false"
                        android:overlapAnchor="false"
                        android:gravity="center|center_vertical"
                        android:paddingBottom="1dp"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:visibility="visible"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="0.77"
                        android:text="@string/type"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="0.14"
                        android:text=":"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/cb_marks"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:text="@string/marks_label"/>

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/cb_syllabus"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:text="@string/syllabus_label"/>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:visibility="visible"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tv_grade"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="0.77"
                        android:text="@string/grade"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="0.14"
                        android:text=":"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/sp_grade"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_weight="1.8"
                        android:background="@drawable/dropdown_button"
                        android:forceHasOverlappingRendering="false"
                        android:overlapAnchor="false"
                        android:gravity="center|center_vertical"
                        android:paddingBottom="1dp"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />


                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tv_exams"
                        android:layout_width="@dimen/_72sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="0.77"
                        android:text ="Exam"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_colon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/tv_exams"
                        android:gravity="left"
                        android:text=":"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_exams"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/tv_colon"
                        android:layout_centerHorizontal="true"
                        android:visibility="visible"
                        android:scrollbars="vertical" />


                    <TextView
                        android:id="@+id/tv_empty_exam_view"
                        android:layout_width="wrap_content"
                        android:layout_weight="1.8"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_colon"
                        android:layout_centerInParent="true"
                        android:textSize="12sp"
                        android:textColor="@color/red"
                        android:layout_gravity="bottom|end"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:visibility="gone"
                        android:text="No Exam Found."/>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_gr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/resultstatus_txt_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="0.77"
                        android:text="@string/status"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="0.14"
                        android:text=":"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"/>

                    <RadioGroup
                        android:id="@+id/status_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1.8"
                        android:layout_marginLeft="@dimen/_5sdp">

                        <RadioButton
                            android:id="@+id/done_chk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:text="Active"
                            android:checked="true"
                            android:tag="1"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:textSize="@dimen/_10sdp"/>
                        <RadioButton
                            android:id="@+id/pendding_chk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:tag="0"
                            android:text="Inactive"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:textSize="@dimen/_10sdp"/>
                    </RadioGroup>
                </LinearLayout>
                <Button
                    android:id="@+id/add_btn"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.22"
                    android:background="@drawable/round_button"
                    android:text="ADD"
                    android:textAllCaps="true"
                    android:textColor="@color/app_bg"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtNoRecords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_gr"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:text="No Records Found..."
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:visibility="gone" />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_linear_add"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="vertical"
            android:visibility="gone">
            <include layout="@layout/mark_syllabus_item_header" />
            <LinearLayout
                android:id="@+id/recycler_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_border"
                android:orientation="vertical"
                android:visibility="visible">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_marks_syallabus_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </LinearLayout>

        </android.support.v7.widget.LinearLayoutCompat>

     </RelativeLayout>
   <!--</ScrollView>-->
</LinearLayout>