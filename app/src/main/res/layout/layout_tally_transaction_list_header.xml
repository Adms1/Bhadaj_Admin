<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:background="@drawable/box_blue"
            android:visibility="visible">

            <TextView
                android:id="@+id/index_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_31sdp"
                android:text="@string/index"
                android:paddingTop="@dimen/_7sdp"
                android:textAlignment="center"
                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/app_bg"
                android:visibility="gone"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/vno_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Voucher No."
                android:paddingTop="@dimen/_7sdp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />
            <TextView
                android:id="@+id/studentname_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:text="@string/student_name_label"
                android:paddingTop="@dimen/_7sdp"
                android:textAlignment="center"
                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />
            <TextView
                android:id="@+id/grno_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/grno"
                android:paddingTop="@dimen/_7sdp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />
            <TextView
                android:id="@+id/amount_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/amount1"
                android:paddingTop="@dimen/_7sdp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />


            <TextView
                android:id="@+id/status_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:paddingTop="@dimen/_7sdp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />


        </LinearLayout>

    </LinearLayout>

