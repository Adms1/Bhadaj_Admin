<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="0dp"
                android:background="@color/app_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_57sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/header_blue"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnBack"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_38sdp"
                        android:background="@drawable/back_btn" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_23sdp"
                    android:layout_alignTop="@+id/header"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_38sdp"
                    android:text="@string/planner"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btnmenu"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_marginLeft="@dimen/_270sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_39sdp"
                    android:background="@drawable/menu" />



                <LinearLayout
                    android:id="@+id/mainstudent_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/header"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/main_linear_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/select_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:text="Type"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.14"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />


                            <RadioGroup
                                android:id="@+id/upload_type_group"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1.8">

                                <RadioButton
                                    android:id="@+id/rb_holiday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2.5"
                                    android:text="Holiday"
                                    android:checked="true"
                                    android:tag="1"
                                    android:textSize="@dimen/_11ssp"/>

                                <RadioButton
                                    android:id="@+id/rb_event"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:tag="0"
                                    android:text="Event"
                                    android:layout_marginLeft="@dimen/_1sdp"
                                    android:textSize="@dimen/_11ssp"/>
                            </RadioGroup>


                        </LinearLayout>




                        <LinearLayout
                            android:id="@+id/linear_subject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/date_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:text="@string/date"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.14"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />



                            <Button
                                android:id="@+id/from_date1_edt"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/calendar_line"
                                android:paddingBottom="1dp"
                                android:paddingLeft="@dimen/_1sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.2"
                                android:text="To"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold" />


                            <Button
                                android:id="@+id/to_date2_edt"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/calendar_line"
                                android:paddingBottom="1dp"
                                android:paddingLeft="@dimen/_1sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:textSize="@dimen/_11ssp" />

                        </LinearLayout>
                        <LinearLayout
                        android:id="@+id/linear_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/title_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="0.5"
                            android:text="@string/title"
                            android:textColor="@color/scheduleheadertextcolor"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="0.14"
                            android:text=":"
                            android:textColor="@color/scheduleheadertextcolor"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/title_edt"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_weight="2.22"
                            android:background="@drawable/linear_border"
                            android:paddingBottom="1dp"
                            android:paddingLeft="@dimen/_1sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:weightSum="3">
                            <TextView
                                android:id="@+id/standard_txt_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|top"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:text="@string/grade"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|top"

                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.14"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1.8"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RadioGroup
                                    android:id="@+id/standard_group"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"

                                    android:layout_marginLeft="@dimen/_5sdp">

                                    <RadioButton
                                        android:id="@+id/rb_all"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@string/all"
                                        android:checked="true"
                                        android:tag="1"
                                        android:layout_marginLeft="@dimen/_1sdp"
                                        android:textSize="@dimen/_10sdp"/>
                                    <RadioButton
                                        android:id="@+id/rb_individual"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:tag="0"
                                        android:text="@string/individual"
                                        android:layout_marginLeft="@dimen/_1sdp"
                                        android:textSize="@dimen/_10sdp"/>
                                </RadioGroup>


                                <GridView
                                    android:id="@+id/standard_grid_view"
                                    android:layout_height="@dimen/_100sdp"
                                    android:layout_width="match_parent"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:numColumns="3"
                                    android:scrollbars="none"
                                    />
                            </LinearLayout>
                        </LinearLayout>


                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_AddUpdate"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/round_button"
                            android:text="Add"
                            android:textAllCaps="true"
                            android:textColor="@color/app_bg"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/txtNoRecords"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/search_btn"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center"
                            android:text="No Records Found..."
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/list_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/main_linear_add"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <include layout="@layout/planner_list_header" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/recycler_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/linear_border2"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/planner_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="false"
                            android:scrollbars="none" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

</layout>