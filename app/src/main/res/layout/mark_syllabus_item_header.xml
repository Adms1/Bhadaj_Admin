<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:visibility="visible"
        android:weightSum="6"
        android:background="@drawable/box_blue">

        <TextView
            android:id="@+id/index_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_31sdp"
            android:text="@string/term_label"
            android:padding="@dimen/_7sdp"
            android:textAlignment="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/academicyear_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_31sdp"
            android:text="@string/type"
            android:padding="@dimen/_7sdp"
            android:textAlignment="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:id="@+id/grade_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_31sdp"
            android:text="@string/grade"
            android:padding="@dimen/_7sdp"
            android:textAlignment="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:id="@+id/resultstatus_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_31sdp"
            android:text="@string/test_name_label"
            android:padding="@dimen/_7sdp"
            android:textAlignment="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:id="@+id/tv_result_status"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_31sdp"
            android:text="@string/resultstatus"
            android:layout_marginBottom="@dimen/_3sdp"
            android:textAlignment="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/tv_edt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_31sdp"
            android:text="@string/edit"
            android:paddingTop="@dimen/_7sdp"
            android:textAlignment="center"
            android:paddingLeft="@dimen/_2sdp"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>
</LinearLayout>