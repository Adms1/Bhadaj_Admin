<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_57sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@drawable/header_blue"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_38sdp"
            android:background="@drawable/back_btn" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_23sdp"
        android:layout_alignTop="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_38sdp"
        android:text="@string/inoutsummary"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnmenu"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_marginLeft="@dimen/_270sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_39sdp"
        android:background="@drawable/menu" />



      <LinearLayout
          android:id="@+id/LL_dropdownContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/header"
          android:weightSum="2"
          android:padding="@dimen/_5sdp"
          android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal">

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/_5sdp"
              android:layout_marginRight="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_5sdp"
              android:layout_weight="1.2"
              android:orientation="horizontal">

              <TextView
                  android:id="@+id/month_txt_View"
                  android:layout_width="@dimen/_40sdp"
                  android:layout_height="wrap_content"
                  android:text="@string/month"
                  android:textAlignment="textStart"
                  android:textColor="@color/scheduleheadertextcolor"
                  android:textSize="@dimen/_12ssp"
                  android:layout_gravity="center"

                  />

              <TextView
                  android:layout_width="@dimen/_10sdp"
                  android:layout_height="wrap_content"
                  android:text=":"
                  android:layout_gravity="center"
                  android:textAlignment="center"
                  android:textColor="@color/scheduleheadertextcolor"
                  android:textSize="@dimen/_9sdp"
                  android:textStyle="bold" />


              <Spinner
                  android:id="@+id/month_spinner"
                  android:layout_width="0dp"
                  android:layout_height="@dimen/_30sdp"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1.2"
                  android:background="@drawable/dropdown_button"
                  android:forceHasOverlappingRendering="true"
                  android:layout_marginRight="@dimen/_5sdp"
                  android:layout_marginLeft="@dimen/_5sdp"
                  android:overlapAnchor="false"
                  android:imeOptions="actionNext"
                  android:gravity="left"
                  android:paddingBottom="1dp"
                  android:paddingTop="@dimen/_5sdp"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_11sdp" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/_5sdp"
              android:layout_marginRight="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_5sdp"
              android:layout_weight="0.8"
              android:orientation="horizontal">




              <Spinner
                  android:id="@+id/year_spinner"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_30sdp"
                  android:layout_gravity="center_vertical"
                  android:background="@drawable/dropdown_button"
                  android:forceHasOverlappingRendering="true"
                  android:layout_marginRight="@dimen/_5sdp"
                  android:layout_marginLeft="@dimen/_5sdp"
                  android:overlapAnchor="false"
                  android:imeOptions="actionNext"
                  android:gravity="left"
                  android:paddingBottom="1dp"
                  android:paddingTop="@dimen/_5sdp"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_11sdp" />
          </LinearLayout>
    </LinearLayout>


          <Button
              android:id="@+id/btn_search"
              android:layout_width="@dimen/_80sdp"
              android:layout_height="@dimen/_30sdp"
              android:layout_gravity="center"
              android:layout_marginBottom="@dimen/_3sdp"
              android:layout_marginTop="@dimen/_5sdp"
              android:background="@drawable/round_button"
              android:text="Search"
              android:textAllCaps="true"
              android:textColor="@color/app_bg"
              android:textSize="@dimen/_12ssp" />

      </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/LL_dropdownContainer">

        <TextView
            android:id="@+id/txtNoRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_btn"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="No Records Found"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/exp_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            android:orientation="vertical">

            <include layout="@layout/layout_in_out_summary_details_header" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/linear_border2"
                android:orientation="vertical">

                <ExpandableListView
                    android:id="@+id/inoutlist_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_1sdp"
                    android:childDivider="@android:color/transparent"
                    android:divider="@android:color/white"
                    android:dividerHeight="5dp"
                    android:groupIndicator="@null"
                    android:scrollbars="none" />
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/red"
            android:layout_centerInParent="true"
            android:text="No Records Found"
            android:visibility="gone"/>


    </RelativeLayout>
</RelativeLayout>

</layout>